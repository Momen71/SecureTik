<!DOCTYPE html>
<html>
<head>
    <title>MikroTik Security Login</title>
    <style>
        :root {
            --primary: #3498db;
            --primary-light: #5dade2;
            --background: url('https://tinyurl.com/mikrotik-pattern') repeat; /* خلفية جديدة */
        }
        
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: var(--background);
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }
        
        .login-container {
            width: 320px; /* حجم أصغر */
            background: rgba(255, 255, 255, 0.95); /* خلفية شبه شفافة */
            border-radius: 10px;
            box-shadow: 0 5px 25px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            text-align: center;
        }
        
        .logo-header {
            padding: 20px;
        }
        
        .logo {
            font-size: 24px; /* حجم أصغر */
            font-weight: bold;
            color: var(--primary);
            margin-bottom: 5px;
        }
        
        .login-form {
            padding: 20px;
        }
        
        .input-group {
            margin-bottom: 15px; /* مسافات أصغر */
            text-align: left;
        }
        
        label {
            display: block;
            margin-bottom: 5px;
            font-weight: 500;
            color: #2c3e50;
            font-size: 14px;
        }
        
        input[type="text"], 
        input[type="password"] {
            width: 100%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 6px;
            font-size: 14px;
            box-sizing: border-box;
        }
        
        .btn-login {
            width: 100%;
            padding: 10px;
            background: var(--primary);
            color: white;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-size: 14px;
            font-weight: 600;
        }

        /* رسائل الخطأ */
        .error-message {
            color: #e74c3c;
            font-size: 13px;
            margin-top: 5px;
            display: none;
<style>
        /* ... (الأسلوب السابق) ... */
        
        .server-error {
            color: #e74c3c;
            background: #f8d7da;
            padding: 10px;
            border-radius: 5px;
            margin-bottom: 15px;
            display: none;
        }
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="logo-header">
            <div class="logo">MikroTik Security</div>
        </div>
        
        <div class="login-form">
            <form id="loginForm" action="/login" method="post">
                <div class="input-group">
                    <label for="username">Username</label>
                    <input type="text" id="username" name="username" required>
                    <div class="error-message" id="usernameError"></div>
                </div>
                
                <div class="input-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" required>
                    <div class="error-message" id="passwordError"></div>
                </div>
                
                <button type="submit" class="btn-login">Login</button>
            </form>
        </div>
    </div>

    <script>
        document.getElementById('loginForm').addEventListener('submit', function(e) {
            let valid = true;
            
            // مسح أخطاء سابقة
            document.querySelectorAll('.error-message').forEach(el => {
                el.style.display = 'none';
                el.textContent = '';
            });
            
            // التحقق من الحقول
            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;
            
            if (!username) {
                document.getElementById('usernameError').textContent = 'Username is required';
                document.getElementById('usernameError').style.display = 'block';
                valid = false;
            }
            
            if (!password) {
                document.getElementById('passwordError').textContent = 'Password is required';
                document.getElementById('passwordError').style.display = 'block';
                valid = false;
            }
            
            if (!valid) {
                e.preventDefault();
            }
        });
    </script>
</body>
</html>
